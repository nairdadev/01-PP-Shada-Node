                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <input type="text" class="form-control form-control-sm m-b-xs" id="filter" placeholder="Buscar">

                    <table class="footable table table-stripped" data-page-size="8" data-filter=#filter>
                        <thead>
                            <tr>

                                <th>Nro Orden</th>
                                <th data-hide="phone">Usuario</th>
                                 
                                <th data-hide="phone">Fecha Pedido</th>
                                <th data-hide="phone">Estado</th>
                                <th class="text-right">Acciones</th>

                            </tr>
                        </thead>
                        <tbody>

                            {{# each orders }}

                            <tr>
                                <td>
                                    {{this.id}}
                                </td>
                                <td>
                         
                                    {{user.name}}
                                  
                                </td>
                              
                                <td>

                                    {{dateFormat datePedido "DD/MM/YYYY"}}

                                </td>
                       
                                <td>
                                    <span class="label label-danger">Pendiente</span>
                                </td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <div class="btn-group">
                                            <a href="/admin/ordenpedido/{{this._id}}" class="btn-white btn btn-xs">Ver
                                                pedido</a>
                                        </div>

                                        <form method="post" action="/admin/orden/finalizarpedido/{{this._id}}">
                                   
                                          <button type="submit" class="btn-white btn btn-xs"> Finalizar</button> 
                                            </form>
                                    </div>
                                </td>
                            </tr>

                            {{/each}}


                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="7">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

